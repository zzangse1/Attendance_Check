<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="40dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_group_name_layout"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:boxStrokeColor="@color/navy_200"
        android:layout_margin="20dp"
        android:hint="그룹 이름"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_group_name"
            android:layout_width="match_parent"
            android:maxLength="10"
            android:layout_height="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_group_name_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@id/et_group_name_layout"
        android:layout_marginStart="20dp"
        android:text="2 ~ 10글자로 작성해주세요."
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/et_group_name_layout"
        android:layout_marginTop="10dp"
        style="@style/AppEditText.Red.S14" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        style="@style/AppEditText.S17"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/plane_outline_background"
        android:text="취소"
        app:layout_constraintEnd_toStartOf="@id/btn_ok"
        app:layout_constraintStart_toStartOf="@id/et_group_name_layout"
        app:layout_constraintTop_toBottomOf="@id/tv_group_name_error" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        style="@style/AppEditText.White.S17"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/plane_fill_background"
        android:text="확인"
        app:layout_constraintEnd_toEndOf="@id/et_group_name_layout"
        app:layout_constraintStart_toEndOf="@id/btn_cancel"
        app:layout_constraintTop_toBottomOf="@id/tv_group_name_error" />
</androidx.constraintlayout.widget.ConstraintLayout>