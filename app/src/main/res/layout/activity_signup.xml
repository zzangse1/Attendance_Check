<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_back2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/signup_title_label"
        app:titleCentered="true"
        app:titleTextAppearance="@style/AppEditText.Bold.S24" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@id/btn_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_signup">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_id"
                style="@style/AppEditText.S17"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/selector_et_id"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="20dp"
                android:hint="@string/plain_id"
                android:inputType="text"
                android:maxLength="16"
                android:nextFocusDown="@id/et_password"
                android:paddingStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_password"
                style="@style/AppEditText.S17"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/selector_et_password"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="20dp"
                android:hint="@string/plain_password"
                android:inputType="textPassword"
                android:nextFocusDown="@id/et_nick_name"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_id" />

            <ImageButton
                android:id="@+id/ib_show_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@color/white"
                android:src="@drawable/ic_visibility_off"
                app:layout_constraintBottom_toBottomOf="@id/et_password"
                app:layout_constraintEnd_toEndOf="@id/et_password"
                app:layout_constraintTop_toTopOf="@id/et_password" />

            <EditText
                android:id="@+id/et_nick_name"
                style="@style/AppEditText.S17"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/selector_et_nickname"
                android:drawableStart="@drawable/ic_nickname"
                android:drawablePadding="20dp"
                android:hint="@string/plain_nickname"
                android:inputType="text"
                android:maxLength="8"
                android:nextFocusDown="@id/et_name"
                android:paddingStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_password" />

            <TextView
                android:id="@+id/tv_error_id"
                style="@style/AppEditText.Red.S14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/et_nick_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_nick_name" />

            <TextView
                android:id="@+id/tv_error_password"
                style="@style/AppEditText.Red.S14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/et_nick_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error_id" />

            <TextView
                android:id="@+id/tv_error_nick_name"
                style="@style/AppEditText.Red.S14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/et_nick_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error_password" />

            <EditText
                android:id="@+id/et_name"
                style="@style/AppEditText.S17"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/selector_et_id"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="20dp"
                android:hint="@string/plain_name"
                android:inputType="text"
                android:nextFocusDown="@id/et_birth"
                android:paddingStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error_password" />

            <EditText
                android:id="@+id/et_birth"
                style="@style/AppEditText.S17"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/selector_et_password"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="20dp"
                android:hint="@string/signup_birth_label"
                android:inputType="date"
                android:maxLength="8"
                android:nextFocusDown="@id/et_number"
                android:paddingStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_name" />

            <View
                android:id="@+id/et_sex_layout"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/et_unclick_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_birth" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/et_sex_layout"
                app:layout_constraintEnd_toEndOf="@id/et_sex_layout"
                app:layout_constraintStart_toStartOf="@id/et_sex_layout"
                app:layout_constraintTop_toTopOf="@id/et_sex_layout">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_male"
                    style="@style/AppButtonText.Gray.S17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_btn_start_sex"
                    android:text="@string/signup_male_label" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_female"
                    style="@style/AppButtonText.Gray.S17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_btn_center_sex"
                    android:text="@string/signup_btn_female_label" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_none"
                    style="@style/AppButtonText.Gray.S17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_btn_end_sex"
                    android:text="@string/signup_btn_none_label" />
            </LinearLayout>


            <EditText
                android:id="@+id/et_number"
                style="@style/AppEditText.S17"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/selector_et_nickname"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="20dp"
                android:hint="@string/plain_number"
                android:inputType="number"
                android:maxLength="11"
                android:paddingStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_sex_layout" />

            <TextView
                android:id="@+id/tv_error_name"
                style="@style/AppEditText.Red.S14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_number" />

            <TextView
                android:id="@+id/tv_error_birth"
                style="@style/AppEditText.Red.S14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error_name" />

            <TextView
                android:id="@+id/tv_error_sex"
                style="@style/AppEditText.Red.S14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error_birth" />

            <TextView
                android:id="@+id/tv_error_phone_number"
                style="@style/AppEditText.Red.S14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error_sex" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/tv_error_phone_number" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_send"
        style="@style/AppEditText.White.S20"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_selector"
        android:text="@string/signup_request_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>